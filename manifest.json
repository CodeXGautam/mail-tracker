{
  "manifest_version": 2,
  "name": "Mail Tracker for Firefox",
  "version": "1.0",
  "description": "Track when your sent emails are opened.",
  "permissions": ["tabs", "activeTab", "storage", "*://*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*", "*://outlook.live.com/*"],
      "js": ["script.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  }
}
