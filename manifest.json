{
  "manifest_version": 2,
  "name": "Mail Tracker",
  "version": "1.0",
  "description": "Track your emails and packages across providers",
  
  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "*://mail.google.com/*",
    "*://outlook.live.com/*",
    "*://*.amazon.com/*",
    "*://*.usps.com/*",
    "*://*.fedex.com/*",
    "*://*.ups.com/*"
  ],
  
  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_popup": "index.html"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://outlook.live.com/*"
      ],
      "js": ["script.js"]
    }
  ]
}